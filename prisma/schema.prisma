generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Portfolio {
  id                    String     @id @default(cuid())
  userId                String     // GitHub (or other provider) user id; portfolios are private per user
  name                  String
  mode                  String
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt
  defaultsRange         String     @default("1y")
  defaultsBenchmark     String     @default("SPY")
  defaultsRiskFreeRate  Float      @default(0)
  defaultsShrinkage     Boolean    @default(false)
  holdings              Holding[]
  snapshots             Snapshot[]
  alertRules            AlertRule[]

  @@index([userId])
}

model Holding {
  id          String    @id @default(cuid())
  portfolioId String
  ticker      String
  value       Float
  createdAt   DateTime  @default(now())
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@index([portfolioId])
}

model Snapshot {
  id             String    @id @default(cuid())
  portfolioId    String
  createdAt      DateTime  @default(now())
  range          String
  benchmark      String
  riskFreeRate   Float
  shrinkage      Boolean
  metricsJson    Json
  seriesJson     Json
  riskJson       Json
  holdingsJson   Json
  portfolio      Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@index([portfolioId, createdAt])
}

model AlertRule {
  id          String    @id @default(cuid())
  portfolioId String
  type        String
  threshold   Float
  createdAt   DateTime  @default(now())
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@index([portfolioId, type])
}
