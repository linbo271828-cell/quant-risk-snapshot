# Copy this file to .env and fill in real values. Do not commit .env.

# Postgres (Neon, Vercel Postgres, or local)
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require"

# NextAuth — generate secret: openssl rand -base64 32
NEXTAUTH_SECRET=""
NEXTAUTH_URL="http://localhost:3000"

# Optional OAuth providers (username/password works without these)
# GitHub OAuth App — https://github.com/settings/developers
# Callback URL (local):  http://localhost:3000/api/auth/callback/github
# Callback URL (Vercel): https://YOUR_APP.vercel.app/api/auth/callback/github
GITHUB_ID=""
GITHUB_SECRET=""

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
